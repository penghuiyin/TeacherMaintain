<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/touch_bg"
    android:layout_margin="12dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/AppCardView"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
<android.support.v7.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1"
    android:textSize="@dimen/text_size18_44"
    android:textColor="@color/colofc7f18"
    android:layout_marginLeft="8dp"
    />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="1028869451"
        android:textSize="@dimen/text_size18_44"
        android:textColor="@color/color23a6ea"
        android:layout_marginLeft="18dp"
        android:singleLine="true"

        />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详情"
        android:textSize="@dimen/text_size18_44"
        android:textColor="@color/color9999"
        android:layout_marginLeft="18dp"
        android:singleLine="true"
        android:layout_marginRight="8dp"
        />
</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="36dp"
            android:background="@color/colod9d9d9"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="37dp"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
<android.support.v7.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="使用者：教师"
    android:textColor="@color/main_black"
    android:textSize="@dimen/text_size18_44"
    android:singleLine="true"
    />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="位置：教学楼-5.1班"
        android:textColor="@color/main_black"
        android:textSize="@dimen/text_size18_44"
        android:singleLine="true"
        android:layout_marginTop="6dp"
        />

</LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/actv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态:"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size18_44"
                    android:singleLine="true"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_toRightOf="@+id/actv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未完成"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size18_44"
                    android:layout_marginLeft="6dp"
                    android:singleLine="true"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/actv_edit"
                    android:layout_below="@+id/actv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑:"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size18_44"
                    android:drawableLeft="@mipmap/bxjd_icon_bj"
                    android:drawablePadding="3dp"
                    android:layout_marginTop="6dp"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_below="@+id/actv_state"
                    android:layout_toRightOf="@+id/actv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size18_44"
                    android:layout_marginLeft="6dp"
                    android:singleLine="true"
                    android:layout_marginTop="6dp"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@mipmap/bxjd_icon_sc"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acvt_comple_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actv_state"
                    android:text="预计完成时间"
                    android:textSize="@dimen/text_size18_44"
                    android:textColor="@color/colofc7f18"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"

                    />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="123dp"
            android:background="@color/colod9d9d9"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/actv_sumit_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="124dp"
            android:text="提交时间：2017-08-09"
            android:textSize="@dimen/text_size16_34"
            android:textColor="@color/color9999"
            android:gravity="center"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>
